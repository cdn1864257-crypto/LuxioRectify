# Backend Configuration
NODE_ENV=production
PORT=10000

# Database
MONGODB_URI=your_mongodb_connection_string_here

# Authentication & Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters
CSRF_SECRET=your_csrf_secret_here_minimum_32_characters

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# NowPayments (IPN_SECRET est OBLIGATOIRE pour la sécurité des webhooks)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret_here_REQUIRED_FOR_SECURITY

# URLs (IMPORTANT: Utilisées pour la sécurité - ne pas utiliser req.headers.origin)
FRONTEND_URL=https://your-frontend-vercel-url.vercel.app
BACKEND_URL=https://your-backend-render-url.onrender.com

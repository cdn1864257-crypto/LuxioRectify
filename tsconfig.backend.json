{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": false,
    "allowJs": true
  },
  "include": [
    "server/**/*",
    "api/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "client",
    "**/*.test.ts",
    "dist"
  ]
}
